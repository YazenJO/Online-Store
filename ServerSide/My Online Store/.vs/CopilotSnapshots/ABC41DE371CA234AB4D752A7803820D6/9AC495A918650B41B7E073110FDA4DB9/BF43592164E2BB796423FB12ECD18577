using Microsoft.AspNetCore.Mvc;
using OnlineStore.BLL;
using OnlineStore.Models;
using System.Collections.Generic;

namespace OnlineStoreAPI.Controllers
{
    [ApiController]
    [Route("api/categories")]
    public class CategoriesController : ControllerBase
    {
        [HttpGet(Name = "GetAllCategories")]
        [ProducesResponseType(StatusCodes.Status200OK)]
        [ProducesResponseType(StatusCodes.Status404NotFound)]
        public ActionResult<IEnumerable<CategoryDTO>> GetAllCategories()
        {
            var categoriesList = Category.GetAllProductCategory();

            if (categoriesList == null || categoriesList.Rows.Count == 0)
            {
                return NotFound(new { message = "No categories found" });
            }

            var dtoList = new List<CategoryDTO>();

            foreach (System.Data.DataRow row in categoriesList.Rows)
            {
                dtoList.Add(new CategoryDTO
                (
                    (int?)row["CategoryID"],
                    (string)row["CategoryName"]
                ));
            }

            return Ok(dtoList);
        }
    }
}
